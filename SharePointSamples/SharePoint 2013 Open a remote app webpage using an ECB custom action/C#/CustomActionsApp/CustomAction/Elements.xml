<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <!-- Adds an ECB custom action to a list in the host web site. -->
  <!-- Create a new custom list and add a new item to it. This custom action will be on the new item's ECB -->
  <CustomAction
    Id="47708c0a-505a-4db1-b424-989328b7abfb.CustomAction"
    RegistrationType="List"
    RegistrationId="101"
    Location="EditControlBlock"
    Sequence="114"
    Title="Invoke custom action">
    <UrlAction Url="~remoteAppUrl/CustomActionTarget.html?HostUrl={HostUrl}&amp;Source={Source}&amp;ListURLDir={ListUrlDir}&amp;ListID={ListId}&amp;ItemURL={ItemUrl}&amp;ItemID={ItemId}"/>
  </CustomAction>
</Elements>
